{
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "module": "Node16",
        "sourceMap": false,
        "target": "ES2020",
        "moduleResolution": "Node16",
        "strict": true,
        "lib": [
            "esnext",
            "DOM"
        ],
        "types": [
            "@types/node"
        ],
        "rootDirs": [
            "."
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.d.ts"
    ]
}